<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>CFBundleDevelopmentRegion</key>
	<string>$(DEVELOPMENT_LANGUAGE)</string>
	<key>CFBundleDisplayName</key>
	<string>Tranzfort TMS</string>
	<key>CFBundleExecutable</key>
	<string>$(EXECUTABLE_NAME)</string>
	<key>CFBundleIdentifier</key>
	<string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
	<key>CFBundleInfoDictionaryVersion</key>
	<string>6.0</string>
	<key>CFBundleName</key>
	<string>tranzfort_tms</string>
	<key>CFBundlePackageType</key>
	<string>APPL</string>
	<key>CFBundleShortVersionString</key>
	<string>$(FLUTTER_BUILD_NAME)</string>
	<key>CFBundleSignature</key>
	<string>????</string>
	<key>CFBundleVersion</key>
	<string>$(FLUTTER_BUILD_NUMBER)</string>
	<key>LSRequiresIPhoneOS</key>
	<true/>
	<key>UILaunchStoryboardName</key>
	<string>LaunchScreen</string>
	<key>UIMainStoryboardFile</key>
	<string>Main</string>
	<key>UISupportedInterfaceOrientations</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>
	<key>UISupportedInterfaceOrientations~ipad</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationPortraitUpsideDown</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>
	<key>CADisableMinimumFrameDurationOnPhone</key>
	<true/>
	<key>UIApplicationSupportsIndirectInputEvents</key>
	<true/>
	
	<!-- Camera and Photo Library Permissions -->
	<key>NSCameraUsageDescription</key>
	<string>This app needs camera access to capture documents and photos for vehicle, driver, and expense management.</string>
	<key>NSPhotoLibraryUsageDescription</key>
	<string>This app needs photo library access to select images for documents and expense receipts.</string>
	<key>NSPhotoLibraryAddUsageDescription</key>
	<string>This app needs permission to save photos and documents to your photo library.</string>
	
	<!-- Location Permissions -->
	<key>NSLocationWhenInUseUsageDescription</key>
	<string>This app needs location access to track vehicle routes and provide location-based services for trip management.</string>
	<key>NSLocationAlwaysAndWhenInUseUsageDescription</key>
	<string>This app needs location access to track vehicle routes and provide location-based services for trip management even when the app is in background.</string>
	<key>NSLocationAlwaysUsageDescription</key>
	<string>This app needs location access to track vehicle routes and provide location-based services for trip management even when the app is in background.</string>
	
	<!-- Network and Background Permissions -->
	<key>UIBackgroundModes</key>
	<array>
		<string>background-fetch</string>
		<string>background-processing</string>
		<string>location</string>
		<string>remote-notification</string>
	</array>
	
	<!-- File Sharing and Document Management -->
	<key>UIFileSharingEnabled</key>
	<true/>
	<key>LSSupportsOpeningDocumentsInPlace</key>
	<true/>
	<key>CFBundleDocumentTypes</key>
	<array>
		<dict>
			<key>CFBundleTypeIconFiles</key>
			<array/>
			<key>CFBundleTypeName</key>
			<string>PDF Document</string>
			<key>CFBundleTypeRole</key>
			<string>Viewer</string>
			<key>LSItemContentTypes</key>
			<array>
				<string>com.adobe.pdf</string>
			</array>
		</dict>
		<dict>
			<key>CFBundleTypeIconFiles</key>
			<array/>
			<key>CFBundleTypeName</key>
			<string>Image Document</string>
			<key>CFBundleTypeRole</key>
			<string>Viewer</string>
			<key>LSItemContentTypes</key>
			<array>
				<string>public.image</string>
				<string>public.jpeg</string>
				<string>public.png</string>
			</array>
		</dict>
		<dict>
			<key>CFBundleTypeIconFiles</key>
			<array/>
			<key>CFBundleTypeName</key>
			<string>Excel Document</string>
			<key>CFBundleTypeRole</key>
			<string>Viewer</string>
			<key>LSItemContentTypes</key>
			<array>
				<string>com.microsoft.excel.xls</string>
				<string>org.openxmlformats.spreadsheetml.sheet</string>
			</array>
		</dict>
	</array>
	
	<!-- Deep Linking -->
	<key>CFBundleURLTypes</key>
	<array>
		<dict>
			<key>CFBundleURLName</key>
			<string>com.tranzfort.tms</string>
			<key>CFBundleURLSchemes</key>
			<array>
				<string>tranzfort</string>
			</array>
			<key>CFBundleTypeRole</key>
			<string>Editor</string>
		</dict>
	</array>
	
	<!-- App Transport Security -->
	<key>NSAppTransportSecurity</key>
	<dict>
		<key>NSAllowsArbitraryLoads</key>
		<true/>
		<key>NSExceptionDomains</key>
		<dict>
			<key>localhost</key>
			<dict>
				<key>NSExceptionAllowsInsecureHTTPLoads</key>
				<true/>
			</dict>
		</dict>
	</dict>
	
	<!-- Push Notifications -->
	<key>UIUserNotificationType</key>
	<array>
		<string>UIUserNotificationTypeAlert</string>
		<string>UIUserNotificationTypeBadge</string>
		<string>UIUserNotificationTypeSound</string>
	</array>
	
	<!-- Privacy and Security -->
	<key>NSFaceIDUsageDescription</key>
	<string>This app uses Face ID for secure authentication and access to sensitive data.</string>
	<key>NSMicrophoneUsageDescription</key>
	<string>This app needs microphone access for voice input to add expenses, update trips, and search data hands-free.</string>
	<key>NSSpeechRecognitionUsageDescription</key>
	<string>This app uses speech recognition to enable voice commands for hands-free data entry and trip management.</string>
	
	<!-- Maps and Location Services -->
	<key>NSLocationUsageDescription</key>
	<string>This app needs location access to provide mapping and navigation services for trip management.</string>
	
	<!-- Contact Permissions (for driver/party management) -->
	<key>NSContactsUsageDescription</key>
	<string>This app needs contact access to import driver and party information from your contacts.</string>
	
	<!-- Calendar Permissions (for trip scheduling) -->
	<key>NSCalendarsUsageDescription</key>
	<string>This app needs calendar access to sync trip schedules with your calendar.</string>
	
	<!-- Bluetooth Permissions (for device connectivity) -->
	<key>NSBluetoothPeripheralUsageDescription</key>
	<string>This app needs Bluetooth access to connect to vehicle diagnostic devices and GPS trackers.</string>
	<key>NSBluetoothAlwaysUsageDescription</key>
	<string>This app needs Bluetooth access to connect to vehicle diagnostic devices and GPS trackers.</string>
	
	<!-- Motion and Fitness Permissions (for driver behavior tracking) -->
	<key>NSMotionUsageDescription</key>
	<string>This app needs motion data access to monitor driver behavior and vehicle performance.</string>
	
	<!-- Siri Integration -->
	<key>NS SiriUsage Description</key>
	<string>This app integrates with Siri for voice commands and trip management.</string>
</dict>
</plist>
